<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 라디오 버튼이 선택되었을 때 -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="24dp" android:height="24dp"/>
                    <solid android:color="@color/green5"/>
                    <stroke android:width="2dp" android:color="@color/green5"/>
                </shape>
            </item>
            <!-- 안쪽 원 -->
            <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 라디오 버튼이 선택되지 않았을 때 -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="2dp" android:color="@color/gray1"/>
        </shape>
    </item>
</selector>
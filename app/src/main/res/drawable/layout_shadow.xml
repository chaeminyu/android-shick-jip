<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 전체 그림자 -->
    <item>
        <shape>
            <solid android:color="#30000000" /> <!-- 반투명 검정 그림자 -->
            <corners android:radius="12dp" /> <!-- 둥근 모서리 -->
        </shape>
    </item>

    <!-- 말풍선 배경 -->
    <item android:top="4dp" android:left="4dp" android:right="4dp">
        <shape>
            <solid android:color="@android:color/white" /> <!-- 배경 색 -->
            <corners android:radius="12dp" /> <!-- 둥근 모서리 -->
        </shape>
    </item>

    <!-- 삼각형 -->
    <item android:gravity="top|center_horizontal" android:bottom="-20dp">
        <shape>
            <solid android:color="@android:color/white" />
            <path
                android:fillType="evenOdd"
                android:pathData="M 50,0 L 100,50 L 0,50 Z" /> <!-- 삼각형 -->
        </shape>
    </item>
</layer-list>
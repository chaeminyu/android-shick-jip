<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShickJip" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 기본 색상 설정 -->
        <item name="colorPrimary">@color/green6</item> <!-- 활성화 색상 -->

        <!-- TextInputLayout 관련 색상 -->
        <item name="boxStrokeColor">@color/green6</item> <!-- 활성화 시 박스 색상 -->

        <!-- 커스텀 폰트 스타일 -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
        <item name="textAppearanceButton">@style/customButtonFontStyle</item>

        <!-- 그림자 및 상태바 관련 설정 -->
        <item name="android:ambientShadowAlpha">0.02</item>
        <item name="android:spotShadowAlpha">0.03</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="ShopActivityTheme" parent="Base.Theme.ShickJip">
        <item name="android:windowTranslucentStatus">false</item> <!-- 상태바를 불투명하게 설정 -->
    </style>

    <style name="Theme.ShickJip" parent="Base.Theme.ShickJip" />

    <style name="ThemeOverlay.ShickJip.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
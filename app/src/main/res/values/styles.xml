<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewNoRipple" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- BottomNavigationView에 Ripple 효과 제거 -->
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="BottomNavTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item> <!-- 텍스트 크기 설정 -->
        <item name="android:padding">0dp</item>  <!-- 패딩 조정 -->
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="GrayOutlineButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gray_button_outline</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="Widget.Theme.ShickJip.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
        <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:windowIsTranslucent">false</item>
            <item name="android:windowFullscreen">true</item>
            <item name="android:windowIsFloating">false</item>
            <item name="android:backgroundDimEnabled">false</item>
        </style>

</resources>
